{
  "$schema": "https://schemas.platformatic.dev/wattpm/3.11.0.json",
  "server": {
    "hostname": "127.0.0.1",
    "port": "{PORT}"
  },
  "logger": {
    "level": "info"
  },
  "entrypoint": "composer",
  "applications": [
    {
      "id": "backend",
      "path": "./web/backend",
      "useHttp": true,
      "nodeOptions": "--import=amaro/strip"
    },
    {
      "id": "composer",
      "path": "./web/composer"
    },
    {
      "id": "frontend",
      "path": "./web/frontend"
    }
  ]
}
